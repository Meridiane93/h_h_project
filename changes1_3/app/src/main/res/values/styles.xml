<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="ThemeOverlay.Material3.Button" />
    <style name="Base.Widget.AppCompat.ProgressBar." parent="Widget.Material3.CircularProgressIndicator.Small" />
    <style name="CardView" parent="Widget.MaterialComponents.CardView"/>

    <style name="Fragment" parent="Theme.lection3" />

    <style name="ImageRcViewProduct" parent="CardView">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginStart">@dimen/normal_100</item>
        <item name="android:layout_marginTop">@dimen/normal_100</item>
        <item name="android:layout_marginBottom">@dimen/normal_100</item>
    </style>

    <style name="Recycler" parent="CardView">
        <item name="cornerRadius">@dimen/normal_300</item>
        <item name="cornerSizeBottomRight">@dimen/normal_300</item>
        <item name="cornerFamilyBottomLeft">@dimen/normal_300</item>
    </style>

    <style name="Base.V27.Theme"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/black_20pc</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_h1_size_sign_in</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">@dimen/text_h2_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.TextField" parent="TextAppearance"/>

    <style name="TextAppearance.TextField.Hint">
        <item name="android:textSize">@dimen/text_hint_size</item>
    </style>

    <style name="Button.Start">
        <item name="android:layout_marginTop">@dimen/normal_200</item>
        <item name="android:layout_marginBottom">@dimen/normal_50</item>
    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.ProgressBarButton">
    <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">@dimen/text_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_size</item>
        <item name="android:textColor">@color/name_clothes</item>
    </style>

    <style name="TextAppearance.Error">
        <item name="android:layout_marginTop">@dimen/normal_50</item>
        <item name="android:textSize">@dimen/text_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_size</item>
        <item name="android:textColor">@color/error_text</item>
    </style>

    <style name="Theme.Cowboys.ShapeAppearanceTextInputLayout" parent="Theme.Cowboys"/>

</resources>