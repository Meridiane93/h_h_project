<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.lection3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:navigationBarColor">@color/white_10pc</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.RoundedShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/normal_100</item>
    </style>

    <style name="Theme.Cowboys"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor">@color/white_50pc</item>
        <item name="colorPrimary">@color/smalt</item>
        <item name="textInputStyle">@style/Theme.Cowboys.TextInputLayout</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_line_extra</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Cowboys.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">@style/Theme.Cowboys.ShapeAppearanceTextInputLayout</item>
        <item name="android:textAppearance">@style/TextAppearance.TextField</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextField.Hint</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/smalt</item>
        <item name="endIconTint">@color/black</item>
        <item name="boxStrokeWidth">@dimen/boxStroke</item>
        <item name="boxStrokeWidthFocused">@dimen/boxStroke</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius</item>

    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.RoundedAppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.H3</item>
        <item name="shapeAppearance">@style/Theme.AndroidSchoolHxHCowboys.RoundedShape</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.RoundedToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/secondary</item>
        <item name="navigationIconTint">@color/secondary</item>
        <item name="tabIconTint">@color/smalt</item>
        <item name="titleTextAppearance">@style/TextAppearance.H3</item>
    </style>

    <style name="Theme.Cowboys.Button"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
    </style>


</resources>